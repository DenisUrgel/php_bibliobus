{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block description %}Réinitialisez votre mot de passe
{% endblock %}

{% block keywords %}reset, password
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/styles/seconnecter.css"/>
{% endblock %}

{% block main %}
<main>


		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<h1>Réinitialisé votre mot de passe</h1>

		{{ form_start(requestForm) }}
		<div class="">
			<label for="reset_password_request_form_email">Email</label>
			<div class="text-danger">
				{{ form_errors(requestForm.email) }}
			</div>
			{{ form_widget(requestForm.email, {'attr': {'class':'form-control', 'autofocus':'autofocus'}}) }}
		</div>

		<div class="">
			<small>
				Entrez votre email, et nous vous enverrons le lien de réinitialisation de votre mot de passe.
			</small>
		</div>
		<div>
			<button formnovalidate class="btn btn-primary">Envoyer</button>
		</div>

		{{ form_end(requestForm) }}
	</main>
{% endblock %}
