{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe
{% endblock %}

{% block description %}
	Nouveau mot de passe
{% endblock %}

{% block keyword %}
	new-password
{% endblock %}

{% block main %}
	<main>
		<h1>Réinitialisation</h1>

		{{ form_start(resetForm) }}
		<div class="mb-3">
			<label for="">Nouveau mot de passe</label>
			{{ form_widget(resetForm.plainPassword.first, {'attr':{'class':'form-control', 'autofocus':'autofocus'}}) }}
		</div>
		<div class="mb-3">
			<label for="">Confirmation du mot de passe</label>
			{{ form_widget(resetForm.plainPassword.second, {'attr':{'class':'form-control', 'autofocus':'autofocus'}}) }}

		</div>
		<button class="btn btn-primary">Réinitialisé le mot passe</button>
		{{ form_end(resetForm) }}
	</main>
{% endblock %}
