{% extends 'base_user.html.twig' %}

{% block title %}Modifier mon profil
{% endblock %}

{% block description %}Modification de mon profil
{% endblock %}

{% block keywords %}edit, profil
{% endblock %}

{% block main %}
	<main>
		<h1 class="text-center my-3 display-5">Modification du profil</h1>

		<div class="row">
			<div class="col-md-8 col-lg-6 mx-auto shadow p-4 bg-gray">
				{{ form_start(form) }}
				<div class="mb-3">
					<label for="user_profile_form_firstName">Prénom</label>
					<div class="text-danger">{{form_errors(form.firstName)}}</div>
					{{ form_widget(form.firstName, {'attr': {'class':'form-control'}}) }}
				</div>
				<div class="mb-3">
					<label for="user_profile_form_lastName">Nom</label>

					<div class="text-danger">{{form_errors(form.lastName)}}</div>
					{{ form_widget(form.lastName, {'attr': {'class':'form-control'}}) }}

				</div>
				<div class="mb-3">
					<label for="user_profile_form_email">Email</label>
					<input type="text" value="{{app.user.email}}" disabled readonly class="form-control">


				{# <div class="text-danger">{{form_errors(form.email)}}</div> #}
					{# {{ form_widget(form.email, {'attr': {'class':'form-control', 'readonly': 'readonly'}}) }} #}
				</div>
				<div class="mb-3">
					<label for="user_profile_form_address">Adresse</label>

					<div class="text-danger">{{form_errors(form.address)}}</div>
					{{ form_widget(form.address, {'attr': {'class':'form-control'}}) }}
				</div>
				<div class="mb-3">
					<label for="user_profile_form_city">Ville</label>
					<div class="text-danger">{{form_errors(form.city)}}</div>
					{{ form_widget(form.city, {'attr': {'class':'form-control'}}) }}

				</div>
				<div class="mb-3">
					<label for="user_profile_form_zipCode">Code postal</label>
					<div class="text-danger">{{form_errors(form.zipCode)}}</div>
					{{ form_widget(form.zipCode, {'attr': {'class':'form-control'}}) }}
				</div>
				<div class="mb-3">
					<label for="user_profile_form_lastName">Nombre de personne dans la famille</label>
                    <div class="text-danger">{{form_errors(form.familyMembers)}}</div>

					{{ form_widget(form.familyMembers, {'attr': {'class':'form-control'}}) }}
				</div>

				<button formnovalidate type="submit" class="btn btn-secondary">Modifé le profil</button>

				{{ form_end(form) }}
			</div>
		</div>
	</main>
{% endblock %}
